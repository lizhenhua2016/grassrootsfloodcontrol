@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
<script type="text/javascript">
    var adcd = "@ViewData["adcd"]";
    $(function () {
        $.ajax({
            url: '/api/QR/QRVillagePicByAdcdAndYear',
            type: "Get",
            data: { adcd: adcd, year: null },
            dataType: "json",
            success: function (data) {
                if (data) {
                    if (data.picName != "") {
                        var picAdcd = data.adcd;
                        //alert(picAdcd);
                        //alert(data.picName);
                        var files = data.picName.split(',');
                        var html = '', show = "";
                        for (var i = 0; i < files.length; i++) {
                            // var pic = JSON.parse(files[i]).fileSrc;
                            //var pic = files[i];
                            //alert(strItem);
                            var strItem = '/Upload/33/' + picAdcd.substring(2, 4) + '/' + picAdcd.substring(4, 6) + '/' + picAdcd.substring(6, 9) + '/' + picAdcd + '/' + files[i];
                            html += '<a href="' + strItem + '" ><img src="' + strItem + '" alt="" style="margin-bottom:15px; width:100%;" /></a>';
                        }
                        $(".main-con").html(html);
                    }
                } else {
                    $(".main-con").html("暂无图片");
                }
            }
        });
    });
</script>