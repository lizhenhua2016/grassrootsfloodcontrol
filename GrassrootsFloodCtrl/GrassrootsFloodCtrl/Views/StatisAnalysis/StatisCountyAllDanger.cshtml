
@{
    Layout = null;
}
<div class="form-inline SearchBar">


    <table id="statisTypeInfo"
           data-pagination="false"
           data-id-field="id"
           data-page-list="[10, 25, 50]"
           data-side-pagination="server"
           data-click-to-select="true"></table>
</div>
<!-- 模态框（Modal） -->
<style>
    .modal-content1 {
        position: relative;
        background-color: #fff;
        -webkit-background-clip: padding-box;
        background-clip: padding-box;
        border: 1px solid #999;
        border: 1px solid rgba(0,0,0,.2);
        border-radius: 6px;
        outline: 0;
        -webkit-box-shadow: 0 3px 9px rgba(0,0,0,.5);
        box-shadow: 0 3px 9px rgba(0,0,0,.5);
    }

    .modal-content {
        -webkit-background-clip: unset;
        background-clip: unset;
        border: 0;
        border-radius: unset;
        outline: 0;
        -webkit-box-shadow: none;
        box-shadow: none;
        padding: 10px;
    }

    #statisTypeInfo a {
        color: blue;
    }
</style>
@Scripts.Render("~/Content/StatisAnalysis/js/common.js")

<script>
    $(function () {
        $("#City").change(function () {
            initAllStatisGridTable();
        });
        initAllStatisGridTable();
    });

    //初始化
    function GetParamsGridAll(params) {
        var temp = {
            //这里的键的名字和控制器的变量名必须一直，这边改动，控制器也需要改成一样的
            PageSize: 0, //页面大小
            PageIndex: 0, //页码
            year: globalYear,
            adcd: $("#City option:checked").attr("data-adcd"),
            order: params.order,
            field: params.sort
        };
        return temp;
    }

    function initAllStatisGridTable() {
        $('#statisTypeInfo').bootstrapTable("destroy");
        $('#statisTypeInfo').bootstrapTable({
            queryParams: GetParamsGridAll,
            striped: true,
            url: "/api/StatisAnalysis/GetStatisCountyDangerTypeAll",
            height: $(window).height() - $("#in-header").height() - 120,
            //fixedColumns: true,
            //fixedNumber:1,
            columns: [
                     {
                        title: '&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;乡镇(街道)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;',
                        field: 'countyName',
                        align: 'center',
                        valign: 'middle',
                        width: '15%'
                    },
                    {
                        title: '危房',
                        field: 'weifangNumWXQ',
                        align: 'center',
                        valign: 'middle'
                    },
                    {
                        title: '山洪灾害危险区',
                        field: 'shanhongNumWXQ',
                        align: 'center',
                        valign: 'middle'
                    },
                      {
                          title: '地质灾害点',
                          field: 'dizhizaihaiNumWXQ',
                          align: 'center',
                          valign: 'middle'
                      },
                        {
                            title: '低洼易涝区',
                            field: 'diwayilaoNumWXQ',
                            align: 'center',
                            valign: 'middle'
                        },
                          {
                              title: '屋顶山塘',
                              field: 'wudingshantangNumWXQ',
                              align: 'center',
                              valign: 'middle'
                          },
                          {
                              title: '堤防险段',
                              field: 'difangxianduanNumWXQ',
                              align: 'center',
                              valign: 'middle'
                          }, {
                              title: '海塘险段',
                              field: 'haitangxianduanNumWXQ',
                              align: 'center',
                              valign: 'middle'
                          }, {
                              title: '其它类型',
                              field: 'qitaNumWXQ',
                              align: 'center',
                              valign: 'middle'
                          }
            ],
            onLoadSuccess: function (data) {
                var rows = data.rows;
                for (var i = 0; i < rows.length; i++) {
                    var nums = rows[i].numstr;
                    if (nums) {
                        var f = nums.split(',');
                        $('#statisTypeInfo').bootstrapTable('mergeCells', {
                            index: f[0],
                            field: 'cityName',
                            rowspan: f[1]
                        });
                    }
                }
                $('#statisTypeInfo td').each(function () {
                    var td = $(this).text();
                    if (td == "小计") {
                        $(this).parent().find("td:not(:first-child)").attr("style", "text-align:center;color:#fff;background:#2c77ec");
                    }
                });
            }
        });
    }

</script>
