
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>浙江省基层防汛防台体系信息管理系统</title>
    <meta name="description" content="浙江省基层防汛防台体系信息管理系统">
    <meta name="viewport" content="width=device-width">
    <link href="~/css/style.css?v=1" rel="stylesheet" />
    <style type="text/css">
        .chromeframe {
            margin: 0.2em 0;
            background: #ccc;
            color: #000;
            padding: 0.2em 0;
        }

        .loginbox {
            margin: 60px auto;
        }

            .loginbox .login-logo {
                position: absolute;
                margin-top: -76px;
                width: 480px;
            }

                .loginbox .login-logo > span {
                    font-size: 18px;
                    float: left;
                    margin-top: 5px;
                }
    </style>
</head>
<body class="loginbg">
    <script src="~/scripts/vendors.js"></script>
    <!--[if lt IE 8]>
        <p class="chromeframe">您当前使用的浏览器版本较低。. 请<a href="http://browsehappy.com/">更新您的浏览器</a>.</p>
    <![endif]-->
    <div class="loginbody">
        <div class="loginbox">

            <div class="login-logo">@*<img src="~/images/icon/logo.png" />&nbsp;&nbsp;*@浙江省基层防汛防台体系信息管理系统</div>
            <div class="login">
                @using (Html.BeginForm("Login1", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm" }))
                {
                    @Html.AntiForgeryToken()
                    <div style="color: red; padding: 0 0 10px 0;">
                        @Html.ValidationSummary()
                    </div>
                    <div style="position: relative">
                        <i class="inputBack1"></i><input name="UserName" id="txtUserName" type="text" class="member" placeholder="请输入用户名" />
                    </div>
                    <div style="position: relative">
                        <i class="inputBack2"></i><input name="Password" id="txtPassword" type="password" class="key" placeholder="请输入密码" />
                    </div>
                    @*<div style="position: relative">
                            <i class="inputBack3"></i><input name="Code" id="txtCode" type="text" class="key" placeholder="请输入验证码"   />
                        </div>*@
                    <div class="loginbtn">
                        <a href="javascript:void(0);" id="btnLogin">登 录</a>
                    </div>

                }
            </div>
        </div>
    </div>
    <script src="~/scripts/jquery-1.11.3.min.js"></script>
    <script>
        $(function () {
            $(document).on('keydown', function (e) {
                var name = $('#txtUserName').val(),
                    pwd = $('#txtPassword').val();
                if (name != "" || pwd != "") {
                    if (e.which == 13) {
                        submitForm();
                    }
                }
            });

            $('#btnLogin').on('click', submitForm);

            function submitForm() {

                var name = $('#txtUserName').val(),
                    pwd = $('#txtPassword').val();

                if (name == "" || pwd == "") {
                    alert('用户名和密码不能为空!');
                    $('#txtUserName').focus();
                    return false;
                }
                $('#loginForm').submit();
            }
            $.ajax({
                url: "/api/AppApi/AppGetUserInfo",
                type: "post",
                dataType: 'json',
                data: { "token": "123" },
                success: function (result) {
                   
                }, error: function (e) {
                   
                }

            });
        });
    </script>


</body>
</html>


