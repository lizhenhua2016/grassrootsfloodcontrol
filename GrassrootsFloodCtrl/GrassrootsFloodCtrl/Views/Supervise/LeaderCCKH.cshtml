    $("#searchbt1").click(function () {
        $('#CCKHTable').bootstrapTable("destroy");
        _position = $("#position1").val();
        _name = $("#key1").val();
        if (_level == 1) {
            _post = $("#postcounty").val();
            countyList(_areas);
        }
        if (_level == 2) {
            _post = $("#posttown").val();
            townsList(_areas);
        }
    });
    $("#searchbt2").click(function () {
        _position = $("#position2").val();
