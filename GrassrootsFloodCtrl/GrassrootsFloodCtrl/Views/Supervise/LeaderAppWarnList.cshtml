
@{
    ViewBag.Title = "AppWarnList";
    Layout = "~/Views/Shared/_LeaderSuperviseLayout.cshtml";
}
@Styles.Render("~/css/bootstrap-plugin")
<div>
    <nav class="navbar navbar-default">
        <div class="form-inline SearchBar" style="margin-top:6px;margin-left:20px;">
            <div class="form-group">
                <label for="name">行政区:</label>
                <select id="city" class="form-control">
                    <option value="">请选择</option>
                </select>
                <label for="name"> </label>
                <select id="country" class="form-control">
                    <option value="">请选择</option>
                </select>
                <label for="name">应急事件名称:</label>
                <input type="text" class="form-control" id="eventName" name="key" placeholder="应急事件名称...">
            </div>
            <button type="submit" class="btn btn-primary" id="search">搜索</button>
        </div>
    </nav>
    <div style="margin-left:20px;">
        <table id="table"
               data-pagination="true"
               data-id-field="id"
               data-page-list="[10, 25, 50]"
               data-side-pagination="server"
               data-click-to-select="true" style="overflow:hidden"></table>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/js/plupload")
    @Scripts.Render("~/js/bootstrap-plugin")
    @Scripts.Render("~/Bundles/vendor/js/bottom")
    @Scripts.Render("~/js/plupload")
    <script type="text/javascript">

        $.fn.modal.Constructor.prototype.enforceFocus = function () { };//解决select2在model内搜索框无效
        $(function () {
            getCheck(7);
            initTable();
            var role= "@ViewData["role"]";
            if(role=="省级"||role=="市级"){
                getCity();
            }else{
                $("#city").hide();
            }
            if(role=="县级"){
                getCountry("@ViewData["adcd"]");
            }
            if (role == "市级")
            {
                getCountry($("#city").val());
            }
            if (role == "镇级")
            {
                $("#country").hide();
            }
            $("#city").change(function(){
                getCountry($("#city").val());
            })
            $("#search").click(function () {
                $('#table').bootstrapTable("destroy");
                initTable();
            })

            function getCity() {
                var adcd = "@ViewData["adcd"]";
                $("#city").empty();
                $.ajax({
                    type: "GET",
                    url: "/Adcd/GetCityAdcd",
                    data: { adcd: adcd },
                    dataType: "json",
                    async: false,
                    success: function (data) {
                        if(data==null){
                            $("#city").hide();
                        }
                        if ("@ViewData["role"]" != "市级"){
                            $("#city").append('<option value="">请选择</option>');
                        }
                        $.each(data,function(i,item){
                            $("#city").append($('<option></option>').val(item.adcd).text(item.adnm));
                        })
                    }
                });
            }

            function getCountry(adcd) {
                $("#country").empty();
                $.ajax({
                    type: "GET",
                    url: "/Adcd/GetCountryAdcd",
                    data: { adcd: adcd },
                    dataType: "json",
                    async:false,
                    success: function (data) {
                        if(data==null){
                            $("#country").hide();
                        }
                        if ("@ViewData["role"]" != "县级") {
                            $("#country").append('<option value="">请选择</option>');
                        }

                        $.each(data,function(i,item){
                            $("#country").append($('<option></option>').val(item.adcd).text(item.adnm));
                        })
                    }
                });
            }
            //获取参数
            function GetParams(params) {
                var temp = {
                    //这里的键的名字和控制器的变量名必须一直，这边改动，控制器也需要改成一样的
                    PageSize: params.limit, //页面大小
                    PageIndex: params.offset / params.limit, //页码
                    order: params.order,
                    field: params.sort,
                    CityAdcd: $("#city").val(),
                    CountryAdcd: $("#country").val(),
                    EventName: $("#eventName").val()
                };
                return temp;
            }
            //初始化表格
            function initTable() {
                $('#table').bootstrapTable({
                    url: "/api/SumAppMessage/EventList",
                    queryParams: GetParams,
                    height: $(window).height() - $("nav").height() - 120,
                    columns: [
                        {
                            title: '序号',
                            align: 'center',
                            width: '50',
                            formatter: function (value, row, index) {
                                var option = $("#table").bootstrapTable("getOptions");
                                return ((option.pageNumber - 1) * option.pageSize) + index + 1;
                            }
                        }, {
                            title: '地区',
                            field: 'adnm',
                            align: 'center',
                            valign: 'middle',
                            width: '100'
                        }, {
                            title: '创建人',
                            field: 'userName',
                            align: 'center',
                            valign: 'middle',
                            width: '90'
                        }, {
                            title: '创建时间',
                            field: 'startTime',
                            align: 'center',
                            valign: 'middle',
                            width: '100',
                            formatter: function (value, row) {
                                return row.startTime != null ? parseJsonDate(row.startTime).formatDate('yyyy-MM-dd HH:mm') : "-";
                            }
                        }, {
                            title: '应急事件名称',
                            field: 'eventName',
                            align: 'center',
                            valign: 'middle',
                            width: '100'
                        }, {
                            title: '操作',
                            align: 'center',
                            valign: 'middle',
                            width: '100',
                            formatter: function (value, row, index) {
                                var html = "<a href='/Supervise/LeaderAppWarnInfoList/" + row.id + "' class='tdEdit'  style='margin:0 3px;color:red;'>查看</a>";
                                return html;
                            }
                        }
                    ]
                });
            }
        })
    </script>
}